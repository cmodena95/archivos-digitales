<%= simple_form_for(document) do |f| %>
  <%= f.input :client %>
  <%= f.input :description %>
  <%# It can be a dropdown list%>
  <%= f.input :agency, collection: Document::TAX_NAME %>
  <%# It can be a dropdown list %>
  <%= f.input :tax_name, collection: Document::TAX_NAME %>
  <%# I don't want a calendar %>
  <%= f.input :date, as: :date, order: [:month, :year] %>
  <%= f.infut :file, as: :file  %>
  <%= f.submit %>
<% end %>
